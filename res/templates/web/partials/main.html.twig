<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>{{ title }}</title>

        <!-- Bootstrap core CSS -->
        <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/vendor/toastmessage/css/toastmessage.css" />
        {% block css_block %}
            <link href="/css/main.css" rel="stylesheet">
        {% endblock %}

        {% block js_block %}

        {% endblock %}
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        {% block main_body %}
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Happy English</a>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="/words/list">{{ 'Home'|trans }}</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Words'|trans }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/words/list">{{ 'List'|trans }}</a></li>
                                    <li><a href="/words-quiz">{{ 'Quiz'|trans }}</a></li>
                                    <li><a href="/chart-words">{{ 'Chart'|trans }}</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Phrases'|trans }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/phrases/list">{{ 'List'|trans }}</a></li>
                                    <li><a href="/phrases-quiz">{{ 'Quiz'|trans }}</a></li>
                                    <li><a href="/chart-phrases">{{ 'Chart'|trans }}</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Pronunciation'|trans }} <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/prons/list">{{ 'List'|trans }}</a></li>
                                    <!--li><a href="/prons/quiz">{{ 'Quiz'|trans }}</a></li-->
                                </ul>
                            </li>
                            <li><a href="{{ uri.router('Words', 'newWord') }}">Add New</a></li>
                        </ul>

                        {% block nav_form %}
                            <div style="float:right; margin-top:15px; color:white">
                            {% if authUser %}
                                <span>Hi, {{authUser.username}}</span> | <a href="/logout">logout</a>
                            {% else %}
                                <span> Hi, visitor</span>
                            {% endif %}
                            </div>
                        {% endblock %}
                    </div><!--/.nav-collapse -->
                </div>
            </nav>


            {% block main_div %}
            {% endblock %}
            
            {% block donation %}
                <div id="donation">
                    <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
                        <input type="hidden" name="cmd" value="_s-xclick">
                        <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----">
                        <input type="image" src="https://www.sandbox.paypal.com/en_US/i/btn/btn_donate_SM.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                        <img alt="" border="0" src="https://www.sandbox.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
                    </form>
                </div>
            {% endblock %}

            <!-- Placed at the end of the document so the pages load faster -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="/vendor/toastmessage/jquery.toastmessage.js"></script>
            <script src="/js/common.js"></script>
            <!-- IE10 viewport hack for Surface/desktop Windows 8 bug >
            <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script-->

            {% block main_js %} {% endblock %}

        {% endblock %}

        <script>
        $(function (){
        {% block common_js %}
        {% endblock %}
            });
        </script>
    </body>
</html>
