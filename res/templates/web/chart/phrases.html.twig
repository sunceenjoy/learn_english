{% extends "web/partials/main.html.twig" %}

{% block css_block %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/vendor/jquery-loadmask/jquery.loadmask.css"/>
{% endblock %}

{% block main_div %}

    <div class="container" style="height:100%">
        <div id="chart-words" style="height:80%"/>
    </div>

{% endblock %}

{% block main_js %}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', {packages: ['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart()
    {
        // Create the data table.
        var jsonData = $.ajax({
            method: "POST",
            data: { type: "phrases", interval: 'day'},
            url: "/chart-ajax",
            dataType: "json",
            async: false
          }).responseText;

        // Create our data table out of JSON data loaded from server.
        var data = new google.visualization.DataTable(jsonData);

        // Set chart options
        var options = {
            title:'Learning Curve[Phrases]',
            width:'100%',
            height:'100%',
            tooltip: {
                isHtml: true
            }
        };

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.LineChart(document.getElementById('chart-words'));
        chart.draw(data, options);
    }
</script>
{% endblock %}